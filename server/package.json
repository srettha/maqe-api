{
    "name": "maqe-api",
    "version": "1.0.0",
    "main": "server.js",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon server.js",
        "db:init": "yarn db:migrate && yarn db:seed",
        "start": "node server.js",
        "db:migrate": "sequelize db:migrate",
        "db:seed": "sequelize db:seed:all",
        "lint": "eslint --ext .js .",
        "ci:lint": "eslint --format=html --output-file ./.reports/eslint/eslint.html --max-warnings 10 --ext .js .",
        "test": "mocha --reporter=mochawesome --reporter-options reportDir=./.reports/mocha ./tests/**/*.test.js",
        "ci:test": "nyc yarn test",
        "ci:coverage": "NODE_ENV='test' nyc report --reporter=text-lcov | coveralls"
    },
    "dependencies": {
        "apollo-server-express": "2.4.0",
        "body-parser": "1.18.3",
        "config": "3.0.1",
        "express": "4.16.4",
        "graphql": "14.1.1",
        "js-yaml": "3.13.1",
        "lodash": "4.17.13",
        "pg": "7.8.0",
        "sequelize": "4.42.0"
    },
    "devDependencies": {
        "chai": "4.2.0",
        "coveralls": "3.0.6",
        "eslint": "5.14.1",
        "eslint-config-airbnb-base": "13.1.0",
        "eslint-plugin-import": "2.16.0",
        "faker": "4.1.0",
        "husky": "3.0.4",
        "mocha": "6.0.1",
        "mochawesome": "^4.1.0",
        "nodemon": "1.18.10",
        "nyc": "^14.1.1",
        "sequelize-cli": "5.4.0",
        "sinon": "7.2.4"
    }
}
